{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.2.0",
        "ext-json": "*",
        "doctrine/dbal": "^2.9",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^6.0",
        "laravel/tinker": "~1.0",
        "niklasravnsborg/laravel-pdf": "^2.0",
        "nuwave/lighthouse": "^4.3"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "friendsofphp/php-cs-fixer": "^2.14",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "create-storage-folders": [
            "@php -r \"if(!file_exists('./storage')) { mkdir('./storage', 0777, true); }\"",
            "@php -r \"if(!file_exists('./storage/framework')) { mkdir('./storage/framework', 0777, true); }\"",
            "@php -r \"if(!file_exists('./storage/framework/sessions')) { mkdir('./storage/framework/sessions', 0777, true); }\"",
            "@php -r \"if(!file_exists('./storage/framework/views')) { mkdir('./storage/framework/views', 0777, true); }\"",
            "@php -r \"if(!file_exists('./storage/logs')) { mkdir('./storage/logs', 0777, true); }\"",
            "chmod 777 -R ./storage"
        ],
        "deploy-application": [
            "git pull",
            "composer create-storage-folders",
            "composer upgrade",
            "composer dump-autoload",
            "php artisan migrate --force",
            "php artisan cache:clear",
            "yarn",
            "yarn run production"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
